<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20px"
    android:background="#F8F5F5"
    android:foregroundGravity="bottom"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10px"
        android:layout_marginTop="10px"
        android:background="#2196F3"
        android:gravity="center"
        android:padding="5px"
        android:text="Programming Language"
        android:textColor="#F6EFEF"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Kotlin"
        android:textAlignment="center"
        android:textColor="#0D0000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="70px"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:foregroundGravity="center"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp"
        app:cardPreventCornerOverlap="true"
        app:contentPadding="10dp">

        <ImageView
            android:id="@+id/pic0"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_margin="20px"
            android:background="#FDFBFB"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/pic0" />

        <ImageView
            android:id="@+id/pic1"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_margin="20px"
            android:alpha="0"
            android:background="#FDFBFB"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/pic1" />

        <ImageView
            android:id="@+id/pic2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_margin="20px"
            android:alpha="0"
            android:background="#FDFBFB"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/pic2" />

        <ImageView
            android:id="@+id/pic3"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_margin="20px"
            android:alpha="0"
            android:background="#FDFBFB"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/pic3" />

        <ImageView
            android:id="@+id/pic4"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_margin="20px"
            android:alpha="0"
            android:background="#FDFBFB"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/pic4" />

        <ImageView
            android:id="@+id/pic5"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_margin="20px"
            android:alpha="0"
            android:background="#FDFBFB"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/pic5" />

        <ImageView
            android:id="@+id/pic6"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_margin="20px"
            android:alpha="0"
            android:background="#FDFBFB"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/pic6" />

        <ImageView
            android:id="@+id/pic7"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_margin="20px"
            android:alpha="0"
            android:background="#FDFBFB"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/pic7" />

        <ImageView
            android:id="@+id/pic8"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_margin="20px"
            android:alpha="0"
            android:background="#FDFBFB"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/pic8" />

        <ImageView
            android:id="@+id/pic9"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_margin="20px"
            android:alpha="0"
            android:background="#FDFBFB"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/pic9" />

        <ImageView
            android:id="@+id/pic10"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_margin="20px"
            android:alpha="0"
            android:background="#FDFBFB"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/pic10" />

        <ImageView
            android:id="@+id/pic11"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_margin="20px"
            android:alpha="0"
            android:background="#FDFBFB"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/pic11" />

        <ImageView
            android:id="@+id/pic12"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_margin="20px"
            android:alpha="0"
            android:background="#FDFBFB"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/pic12" />

        <ImageView
            android:id="@+id/pic13"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_margin="20px"
            android:alpha="0"
            android:background="#FDFBFB"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/pic13" />

        <ImageView
            android:id="@+id/pic14"
            android:layout_width="250dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:layout_margin="20px"
            android:alpha="0"
            android:background="#FDFBFB"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/pic14" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:text="Introduced in : "
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:text="Creator : "
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15px"
                android:text="Used in : "
                android:textSize="20sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/launchDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:text="2011"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/creator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:text="JetBrains"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/usedIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15px"
                android:text="Android development, server-side applications, cross-platform apps"
                android:textSize="20sp"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/prev"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#4CAF50"
            app:srcCompat="@android:drawable/ic_media_rew" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7px"
            android:layout_marginRight="7px"
            android:layout_marginBottom="5px"
            android:layout_weight="1"
            android:background="#03A9F4"
            android:orientation="vertical"
            android:padding="5px">

            <ImageButton
                android:id="@+id/btnView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#03A9F4"
                app:srcCompat="@android:drawable/ic_menu_search" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#03A9F4"
                android:padding="5px"
                android:text="View Docs"
                android:textAlignment="center"
                android:textColor="#E8EDEF"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/next"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#4CAF50"
            app:srcCompat="@android:drawable/ic_media_ff" />
    </LinearLayout>

</LinearLayout>